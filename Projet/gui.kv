#:import App kivy.app.App

<MyApp>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .1

            Label:
                id: insert_username_label
                text: 'Select your username'
                font_size: 20
                height: .3

            Spinner:
                id: spinner_id
                text: 'Your username'
                values: root.setValues()
                on_text: root.spinner_clicked(spinner_id.text)

            Button:
                id: submit
                text: 'Confirm'
                on_press: root.submit_user(spinner_id.text)

        BoxLayout:
            id: user_info
            orientation: 'horizontal'
            size_hint: 1, .2

            Label:
                id: username_label
                text: root.show_username()
                font_size: 32

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .8

            Label:
                id: player1
                text: ''
                font_size: 20
            Label:
                id: player2
                text: ''
                font_size: 20
            Label:
                id: player3
                text: ''
                font_size: 20
            Label:
                id: player4
                text: ''
                font_size: 20
            Label:
                id: player5
                text: ''
                font_size: 20
            Label:
                id: player6
                text: ''
                font_size: 20
            Label:
                id: player7
                text: ''
                font_size: 20
            Label:
                id: player8
                text: ''
                font_size: 20
            Label:
                id: player9
                text: ''
                font_size: 20


        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, .1
            height: .2

            Label:
                id: flop1

            Label:
                id: flop2

            Label:
                id: flop3

            Label:
                id: turn

            Label:
                id: river


        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .1
            height: .2

            BoxLayout:
                orientation: 'horizontal'
                Button:
                    id: previous
                    text: 'Previous action'
                    on_press: root.previous()
                Button:
                    id: next
                    text: 'Next action'
                    on_press: root.next()
